{
  "name": "auth-service",
  "description": "LetsStreamIt platform authentication service",
  "keywords": [
    "typescript"
  ],
  "author": {
    "name": "LetsStreamIt",
    "url": "https://github.com/LetsStreamIt"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LetsStreamIt/auth-service"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "node -e \"var { rmdirSync, existsSync } = require('fs'), path = require('path'); ['./dist'].forEach(fPath => {if (existsSync(path.join(__dirname, fPath))) rmdirSync(path.join(__dirname, fPath), { recursive: true })}); process.exit(0);\"",
    "clean:all": "npm run clean && (rm -r ./node_modules || true)",
    "lint:fix": "eslint --fix src/**/*.ts test/**/*.ts",
    "lint:check": "eslint src/**/*.ts test/**/*.ts",
    "format:write": "prettier --write src/",
    "format:check": "prettier --check src/",
    "preversion": "npm run build && npm run cover:check",
    "prepare": "husky",
    "serve": "nodemon ./src/index.ts",
    "test": "mocha --exit"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.8.0",
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^4.3.17",
    "@types/chai-http": "^4.2.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.4.1",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "chai": "^4.5.0",
    "chai-http": "^4.4.0",
    "eslint": "^9.8.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "mocha": "^10.7.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.2.5",
    "semantic-release-preconfigured-conventional-commits": "1.1.108",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0"
  },
  "engines": {
    "node": "20.17"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.2",
    "node-oauth2-server": "^2.4.0",
    "purify-ts": "^2.1.0",
    "sinon": "^19.0.0"
  }
}
